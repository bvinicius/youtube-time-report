{
	"compilerOptions": {
		"target": "esnext",
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["chrome", "node"],
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.json",
		"test/**/*.ts",
		"test/**/*.d.ts",
		"test/**/*.tsx",
		"test/**/*.vue",
		"test/**/*.json",
		"manifest.json",
		"package.json"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
